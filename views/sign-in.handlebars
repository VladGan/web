<div class="container">
    <div class="page-header">
        <h1>Sign in
            <!--<small>Subtext for header</small>-->
        </h1>
    </div>
</div>

<form class="form-horizontal login-form" name="login-form">
    <div class="form-group">
        <label for="input-username" class="col-lg-2 control-label">Name</label>

        <div class="col-lg-5">
            <input name="username" type="text" value="" class="form-control" id="input-username" placeholder="Add Name">
        </div>
    </div>
    <div class="form-group">
        <label for="input-password" class="col-lg-2 control-label">Password</label>

        <div class="col-lg-5">
            <input name="password" type="password" value="" class="form-control" id="input-password" placeholder="Add Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-success" data-loading-text="Sending...">Sign in</button>
        </div>
    </div>
</form>

<div class="container">
    <div class="alert error" role="alert"></div>
</div>



<script src="/javascripts/sign-in.js"></script>
