<!--resume-->
<link type="text/css" rel="stylesheet" href="/stylesheets/style-resume.css">
<link href='http://fonts.googleapis.com/css?family=Rokkitt:400,700|Lato:400,300' rel='stylesheet' type='text/css'>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<!--resume-->
<div class = "preview-button" id = "preview">
    preview
</div>
{{#if res}}
<div class = "save-button" id = "save">
    save
</div>
{{/if}}

<div id="cv" class="instaFade">
    <div class="mainDetails">

        <div id="headshot" class="quickFade">
            <img src="{{curUser.img}}" alt="{{curUser.firstname}} {{curUser.secondname}}" />
        </div>

        <div id="name">
            <h1 class="quickFade delayTwo"><span class = "editable">{{curUser.firstname}}</span> <span class = "editable">{{curUser.secondname}}</span></h1>
        </div>

        <div id="contactDetails" class="quickFade delayFour">
            <ul>
                <li>e: <a href="mailto:{{curUser.mail}}" target="_blank"><span class="editable">{{curUser.mail}}</span></a></li>
                <li>w: <a href="{{curUser.website}}"><span class="editable">{{curUser.website}}</span></a></li>
                <li>m: <span class="editable">{{curUser.mobile}}</span></li>
            </ul>
        </div>
        <div class="clear"></div>
    </div>

    <div id="mainArea" class="quickFade delayFive">
        <section>

            <article>
                <div class="sectionTitle">
                    <h1>Personal Profile</h1>
                </div>

                <div class="sectionContent">
                    <p class="editable">{{curUser.personal_info}}</p>
                </div>
            </article>
            <div class="clear"></div>
        </section>


        <section>

            <div class="sectionTitle">
                <h1>Work Experience</h1>
            </div>

            <div class="sectionContent">
                <article>
                    <h2><span class="editable">{{curUser.work_experience.jobTitle}}</span> at <span class="editable">{{curUser.work_experience.company}}</span></h2>
                    <p class="subDetails"><span class="editable">{{curUser.work_experience.workingTime.start}}</span> - <span class="editable">{{curUser.work_experience.workingTime.end}}</span></p>
                    <p class="editable">{{curUser.work_experience.description}}</p>
                </article>
            </div>
            <div class="clear"></div>
        </section>


        <section>
            <div class="sectionTitle">
                <h1>Key Skills</h1>
            </div>


            <div class="sectionContent">
                <ul class="keySkills">
                    {{#skillsList curUser}}
                    {{/skillsList}}
                </ul>
            </div>
            <div class="clear"></div>
        </section>


        <section>

            <div class="sectionTitle">
                <h1>Education</h1>
            </div>

            <div class="sectionContent">
                <article>
                    <h2 class="editable">{{curUser.university}}</h2>
                    <p class="subDetails editable">{{curUser.specialty}}</p>
                    <p class="editable">{{curUser.university_desc}}</p>
                </article>
            </div>
            <div class="clear"></div>
        </section>

    </div>
</div>

{{#if res}}
    <script src="/javascripts/resume/create-resume.js"></script>
{{/if}}
    <script src="/javascripts/resume/resume-for-company.js"></script>

<script type="text/javascript" src="/javascripts/jspdf/html2canvas.js"></script>
<script type="text/javascript" src="/javascripts/jspdf/jspdfMin.js"></script>